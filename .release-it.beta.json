{
	"non-interactive": true,
	"verbose": true,
	"increment": "prerelease",
	"preRelease": "beta",
	"requireCleanWorkingDir": true,
	"changelogCommand": "echo \"### Commits\n$(git log --pretty=format:'* %s (%h)' [REV_RANGE])\"",
	"src": {
		"commitMessage": "Pre-release v%s",
		"tagName": "v%s",
		"tagAnnotation": "Tradeshift UI v%s",
		"beforeStartCommand":
			"echo 'S3 overwrite protection & code linting…' && grunt check_cdn:cdn && grunt clean && npm run lint"
	},
	"buildCommand": "echo 'Building Tradeshift UI…' && grunt dist",
	"dist": {
		"beforeStageCommand": "echo 'Uploading to S3…' && grunt exec:s3_upload",
		"afterReleaseCommand": "echo Successfully released Tradeshift UI v${version}!"
	},
	"github": {
		"release": true,
		"releaseName": "Pre-release: v%s",
		"preRelease": true,
		"tokenRef": "GH_ACCESS_TOK"
	}
}
