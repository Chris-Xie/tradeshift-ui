<header ts-topbar></header>
<main ts-main>
	<article>
		<form ts-form>
			<fieldset>
				<label>
					<span>Select (TODO: keyboard support)</span>
					<select name="select">
						<option value="one">One</option>
						<option value="two">Two</option>
						<option value="three">Three</option>
					</select>
				</label>
			</fieldset>
			<fieldset>
				<label>
					<span>Select DISABLED</span>
					<select name="select" disabled="disabled">
						<option value="one">One</option>
						<option value="two">Two</option>
						<option value="three">Three</option>
					</select>
				</label>
			</fieldset>
			<fieldset>
				<span>Checkboxes!!</span>
				<label>
					<input type="checkbox" name="option1" checked="checked">
					<span>Option 1</span>
				</label>
				<label>
					<input type="checkbox" name="option2">
					<span>Option 2</span>
				</label>
			</fieldset>
			<fieldset>
				<span>Radios</span>
				<label>
					<input type="radio" name="radio" checked="checked">
					<span>Option 1</span>
				</label>
				<label>
					<input type="radio" name="radio">
					<span>Option 2</span>
				</label>
			</fieldset>
			<fieldset>
				<span>Switches</span>
				<label>
					<span>Switch 1</span>
					<input type="checkbox" name="switch1" checked="checked">
				</label>
				<label>
					<span>Switch 2</span>
					<input type="checkbox" name="switch2">
				</label>
			</fieldset>
		</form>
	</article>
</main>
